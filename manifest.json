{
  "manifest_version": 3,
  "name": "スタンプ挿入ツール（浮かぶUI付き）",
  "version": "1.0.3",
  "description": "ショートカットキーでタイムスタンプ＋テキストを挿入。UIで直接編集可能。",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "insert-stamp": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "スタンプを挿入"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "スタンプ設定"
  }
}